{
    "appId": "Gem.core",
    "productName": "GemCore",
    "files": [
        "src/**/*",
        "global/**/*",
        "assets/**/*",
        "!README.md", 
        "!.gitignore", 
        "!src/api", 
        "!src/screens/index.js", 
        "!src/main.js", 
        "!src/screens/addresses.js", 
        "!src/screens/loading.js", 
        "!src/screens/endscreen.js", 
        "!src/screens/masternodes.js", 
        "!src/screens/mnsconfig.js", 
        "!src/screens/overview.js", 
        "!src/screens/send.js", 
        "!src/screens/shield.js", 
        "!src/screens/transactions.js", 
        "!src/screens/settings.js", 
        "!src/screens/services.js", 
        "!src/html", 
        "!src/mwapp.js", 
        "!src/renderer.js", 
        "!Gruntfile.js", 
        "!src/screens/splashscreen.js", 
        "!src/screens/debuggingscreen.js", 
        "!src/screens/addressbook.js", 
        "!src/screens/voting.js", 
        "!src/addressbook.js", 
        "!src/voting.js"
    ],
    "directories": {
        "output": "release-builds/electron-builder",
        "buildResources": "assets"
    },

    "asar": true,
    "linux": {
        "target": [
            "AppImage",
            "deb"
        ],
        "icon": "assets/logo/linux/icon.png",
        "publish": ["Gemlink Inc."]
    },
    "win": {
        "target": [
            "nsis"
        ],
        "icon": "assets/logo/win/icon.ico",
        "publish": ["Gemlink Inc."]
    },
    "mac": {
        "target": [
            "pkg"
        ],
        "icon": "assets/logo/mac/icon.icns",
        "publish": ["Gemlink Inc."]
    }
}

